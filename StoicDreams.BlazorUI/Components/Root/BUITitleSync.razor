@inherits BUICore
@inject IJsInterop JSInterop

<PageTitle>@AppTitle</PageTitle>

@code {
	private string Title => GetAppState<string>(AppStateDataTags.PageTitle, () => string.Empty);

	private string AppTitle => AppOptions.TitleFormat
			.Replace("{AppName}", AppOptions.AppName)
			.Replace("{PageTitle}", Title)
			;

	protected override void OnAppStateUpdate()
	{
		InvokeAsync(StateHasChanged);
	}
}