
<MudPaper Class="@GetClass" Elevation="Elevation">
	@ChildContent
</MudPaper>

@code {
	[Parameter]
	public RenderFragment? ChildContent { get; set; }
	[Parameter]
	public string Class { get; set; } = string.Empty;
	[Parameter]
	public int Elevation { get; set; } = 10;

	private string GetClass => $"ma-2 pa-4 {Class}".Trim();
}
