<BUIPageDetail Title="@Title" />

@if (FlipState)
{
	<BUIPageContentRender PageSegments="PageMarkup" />
}
else
{
	<BUIPageContentRender PageSegments="PageMarkup" />
}

@code {
	protected string Title { get; set; } = string.Empty;

	protected List<PageSegment> PageMarkup { get; set; } = new();

	protected bool FlipState { get; set; }
}
