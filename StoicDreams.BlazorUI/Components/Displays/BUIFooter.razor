@inherits BUICore

<BUIPaper PaperType="PaperTypes.FlexRow" Class="bui-footer justify-center align-center mud-theme-dark" Elevation="0" Squared="true">
	<MudIcon Icon="@Icons.Material.Rounded.Copyright" Color="Color.Inherit" Class="mr-1" />
	@if (string.IsNullOrWhiteSpace(AppOptions.CompanyHomeUrl))
	{
		@AppOptions.CompanyName
	}
	else
	{
		<BUILink Href="@AppOptions.CompanyHomeUrl">
			@AppOptions.CompanyName
		</BUILink>
	}
	<BUIPaper PaperType="PaperTypes.None" Elevation="0" Class="ml-1 mr-1 mud-theme-transparent"> - Powered by </BUIPaper>
	<BUILink Href="https://blazorui.stoicdreams.com">Blazor UI</BUILink>
</BUIPaper>

