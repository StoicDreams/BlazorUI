@if (TitleContent != null)
{
	<BUISectionTitle>@TitleContent</BUISectionTitle>
}
else if (!string.IsNullOrWhiteSpace(Title))
{
	<BUISectionTitle>@Title</BUISectionTitle>
}
<MudPaper Class="@GetClass" Elevation="Elevation">
	@foreach (RenderFragment paragraph in ParagraphContent)
	{
		<BUIParagraph>@paragraph</BUIParagraph>
	}
	@ChildContent
</MudPaper>

@code {
	[Parameter]
	public RenderFragment? ChildContent { get; set; }
	[Parameter]
	public RenderFragment[] ParagraphContent { get; set; } = Array.Empty<RenderFragment>();
	[Parameter]
	public string Class { get; set; } = "ma-2 pa-4";
	[Parameter]
	public int Elevation { get; set; } = 10;
	[Parameter]
	public string Title { get; set; } = string.Empty;
	[Parameter]
	public RenderFragment? TitleContent { get; set; }

	private string GetClass => Class;
}
