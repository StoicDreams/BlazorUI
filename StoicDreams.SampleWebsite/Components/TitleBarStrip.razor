@inherits BUICore

@using StoicDreams.BlazorUI.Components.Displays

<MudTooltip Text="Sponser to help support development">
	<MudIconButton Size="Size.Small" Color="Color.Inherit" Icon="@Icons.Material.TwoTone.AttachMoney" Href="https://github.com/sponsors/StoicDreams" Target="_blank" />
</MudTooltip>
<MudTooltip Text="Link to Blazor UI on GitHub" Placement="Placement.Left">
	<MudIconButton Size="Size.Small" Color="Color.Inherit" Icon="@Icons.Custom.Brands.GitHub" Href="https://GitHub.com/StoicDreams/BlazorUI" Target="_blank" />
</MudTooltip>
<MudTooltip Text="Link to Blazor UI in NuGet.org" Placement="Placement.Left">
	<MudIconButton Size="Size.Small" Color="Color.Inherit" Icon="@Icons.Material.TwoTone.Store" Href="https://NuGet.org/packages/StoicDreams.BlazorUI" Target="_blank" />
</MudTooltip>
<BUITitleBarQuickLinks />

<MudPaper Class="ml-1 mud-theme-transparent" Elevation="0">
	@UserName
</MudPaper>

@code {
	private string UserName => Auth.User.Name;

	protected override async Task OnInitializedAsync()
	{
		bool setupWatcherForUserUpdate = GetAppState<bool>(AppStateDataTags.UserAuthUpdate);
		await base.OnInitializedAsync();
	}
}