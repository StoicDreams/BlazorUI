<MudPaper Class="@GetClass" Elevation="Elevation" MaxWidth="@MaxWidth">
	@ChildContent
</MudPaper>

@code {
	[Parameter]
	public RenderFragment? ChildContent { get; set; }
	[Parameter]
	public PaperTypes PaperType { get; set; }
	[Parameter]
	public string Class { get; set; } = string.Empty;
	[Parameter]
	public int Elevation { get; set; } = 0;
	[Parameter]
	public string MaxWidth { get; set; } = "100%";

	private string GetClass => $"{PaperType.GetClasses()} {Class}".Trim();
}
