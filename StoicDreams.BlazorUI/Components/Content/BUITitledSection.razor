
<BUIStandardSection Class="@GetWrapClass">
	<MudInputLabel Class="@GetTitleClass">
		@Title
		@TitleContent
	</MudInputLabel>
	<BUIPaper PaperType="PaperTypes.Wrap" Class="@GetContentClass">
		@ChildContent
	</BUIPaper>
</BUIStandardSection>

@code {
	[Parameter]
	public Color TitleTheme { get; set; } = Color.Primary;
	[Parameter]
	public string Title { get; set; } = string.Empty;
	[Parameter]
	public RenderFragment? TitleContent { get; set; }
	[Parameter]
	public RenderFragment? ChildContent { get; set; }
	[Parameter]
	public string Class { get; set; } = "pa-0";
	[Parameter]
	public string TitleClass { get; set; } = string.Empty;
	[Parameter]
	public string ContentClass { get; set; } = string.Empty;

	private string GetWrapClass => Class;
	private string GetTitleClass => $"mud-theme-{TitleTheme.AsName().ToLower()} pa-2 {TitleClass}".Trim();
	private string GetContentClass => $"pa-2 {ContentClass}".Trim();

}
